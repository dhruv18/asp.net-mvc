var query = from  r in _db.Restaurants
                where r.Cuntry == "USA"
                orderby r.Name
                select r;
 or
 var query = _db.Restaurants
                .where(r => r.country == "USA")
                .OrderBy(r => r.Name)
                .Skip(10)//fore Pagging
                .Take(10);//fore Paging
and
